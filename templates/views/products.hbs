<div class="container">
	<h1>Products</h1>
	<div class="col-md-12">
		<div class="row">
			{{# each products}}
             <div class="col-md-4">
             	<h2><a href="{{productUrl slug}}">{{{title}}}</a></h2>
             	{{#if image}}
             	 <img src="{{{cloudinaryUrl image width=200 crop='fit'}}}" >
             	{{/if}}
             </div>
			{{/each}}
		</div>
	</div>
</div>